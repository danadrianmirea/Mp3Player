<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mike.mp3player.client.MediaPlayerActivity">


    <TextView
        android:id="@+id/artistName"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ARTIST_NAME" />

    <TextView
        android:id="@+id/trackName"
        android:layout_below="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TRACK_NAME" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackName"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/playbackSpeedTitle"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/PLAYBACK_SPEED" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/decreasePlaybackSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_remove_circle_24px" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/increasePlaybackSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_add_circle_24px"
            />
        <TextView
            android:id="@+id/playbackSpeedValue"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PLAYBACK_SPEED_DEFAULT_VALUE" />
    </LinearLayout>

    <fragment
        android:id="@+id/playbackTrackerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playbackToolbarExtendedFragment"
        class="com.example.mike.mp3player.client.view.fragments.PlaybackTrackerFragment"
        tools:layout="@layout/fragment_playback_tracker"/>

    <fragment
        android:id="@+id/playbackToolbarExtendedFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:minHeight="?attr/actionBarSize"
        class="com.example.mike.mp3player.client.view.fragments.PlaybackToolbarExtendedFragment"
        tools:layout="@layout/playback_toolbar_layout" />

</RelativeLayout>
