<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainActivityView">

    <fragment
        android:id="@+id/searchSongViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.mike.mp3player.client.view.fragments.SongFilterFragment"
        tools:layout="@layout/fragment_song_filter"/>

    <fragment
        android:id="@+id/mainFrameFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.mike.mp3player.client.view.fragments.MainFrameFragment"
        tools:layout="@layout/fragment_main_frame"/>

</FrameLayout>